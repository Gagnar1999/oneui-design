<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/toolbar_layout_action_mode_toolbar"
    android:layout_width="fill_parent"
    android:layout_height="?actionBarSize"
    android:layout_gravity="bottom"
    app:contentInsetStart="0.0dip">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="68.0dip"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10.0dip"
            android:paddingBottom="2.0dip">

            <androidx.appcompat.widget.AppCompatCheckBox
                android:id="@+id/toolbar_layout_select_all_checkbox"
                android:layout_width="wrap_content"
                android:layout_height="32.0dip"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginStart="18.0dip"
                android:clickable="true"
                android:duplicateParentState="true"
                android:focusable="true" />
            <!--android:background="@drawable/ripple"-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/toolbar_layout_select_all_checkbox"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-4.0dip"
                android:importantForAccessibility="no"
                android:includeFontPadding="true"
                android:maxWidth="320.0dip"
                android:maxLines="1"
                android:text="@string/oui_action_mode_all_checkbox"
                android:textAllCaps="false"
                android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
                android:textColor="?actionMenuTextColor"
                android:textSize="11.0dip"
                android:textStyle="normal" />
        </RelativeLayout>

        <TextView
            android:id="@+id/toolbar_layout_action_mode_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:maxLines="1"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:textColor="?actionMenuTextColor"
            android:textSize="19.0sp" />
    </LinearLayout>

</androidx.appcompat.widget.Toolbar>