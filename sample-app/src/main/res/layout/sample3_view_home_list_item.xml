<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?attr/listPreferredItemHeightSmall"
    android:paddingStart="@dimen/home_list_item_icon_padding_start"
    android:paddingEnd="@dimen/home_list_item_view_padding"
    android:gravity="center_vertical"
    android:background="?attr/listChoiceBackgroundIndicator"
    tools:viewBindingIgnore="true">

    <FrameLayout
        android:id="@+id/home_item_icon_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingEnd="@dimen/home_list_item_icon_padding_end"
        android:gravity="start|center">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/home_item_icon"
            android:layout_width="@dimen/home_list_item_icon_size"
            android:layout_height="@dimen/home_list_item_icon_size"
            android:layout_gravity="center" />

    </FrameLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingTop="14dp"
        android:paddingBottom="14dp">

        <TextView
            android:id="@+id/home_item_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?attr/textAppearanceListItem"
            android:textAlignment="viewStart"
            android:maxLines="5"
            android:ellipsize="end" />

        <TextView
            android:id="@+id/home_item_summary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@android:id/title"
            android:layout_alignStart="@android:id/title"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textAlignment="viewStart"
            android:maxLines="10" />

    </RelativeLayout>

</LinearLayout>